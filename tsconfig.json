{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    "types": ["@types/node", "@types/vuex"],
    "esModuleInterop": true,
    "verbatimModuleSyntax": true
  },
  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
